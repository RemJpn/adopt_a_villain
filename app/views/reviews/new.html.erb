
<div class="container">
  <div class="card p-3 m-3" style="background: #adabab">
    <%= simple_form_for [ @booking, @review ] do |f| %>
      <%= f.input :comment, as: :text %>
      <%= f.input :rating, collection: 1..5 %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
