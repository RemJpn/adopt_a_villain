
<div class="banner-villain" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://wallpaperset.com/w/full/5/0/6/290168.jpg')">
  <div class="container">
    <h1>Why so <strong>serious</strong> ?</h1>
      <%= simple_form_for :search, url: villains_path, method: "GET", html: { class: 'form-inline justify-content-center pt-4' } do |f| %>
        <%= f.input :booking_address, label: false, placeholder: "Search by location", input_html: {value: @booking_address} %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>

<div class="container py-4">
  <div class="cards-villain">
    <% @villains.each do |villain| %>
      <%= link_to villain_path(villain, booking_address: @booking_address) do %>
      <div class="card-villain">
        <div class="card-villain-image" style="background-image: url('<%= cl_image_path villain.photo.key, height: 300, width: 400, crop: :fill %>')">
          <!-- https://cache.desktopnexus.com/thumbseg/2358/2358429-bigthumbnail.jpg -->
        </div>
        <!-- <img src="https://cache.desktopnexus.com/thumbseg/2358/2358429-bigthumbnail.jpg" /> -->
          <div class="card-villain-infos">
            <div>
              <h2><%= villain.name %></h2>
              <div class="progress-items d-flex">
                <p>Nastiness</p>
                <div class="progress mx-2" style="width: 100px">
                  <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" style="width: <%= villain.nastiness * 20 %>%;" aria-valuenow="<%= villain.nastiness * 20%>" aria-valuemin="0" aria-valuemax="100"><%= villain.nastiness * 20%>%</div>
                </div>
              </div>
            </div>
            <h2 class="card-villain-pricing"><%= villain.daily_price %> â‚¬</h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

